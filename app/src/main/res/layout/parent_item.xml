<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/white"
    >
    <RelativeLayout
        android:id="@+id/list_item_self"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/list_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="类型"
            android:layout_marginStart="30dp"
            android:textSize="20sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="名称"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:textColor="#000000"
            />

        <ImageView
            android:id="@+id/delete_imv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delete_black_36dp"/>

        <ImageView
            android:id="@+id/add_imv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/delete_imv"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_playlist_add_black_36dp"/>

        <ImageView
            android:id="@+id/sort_imv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/add_imv"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_sort_black_36dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>